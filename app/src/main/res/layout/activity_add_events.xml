<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddEvents">

    <ImageView
        android:id="@+id/addEventsImageBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/eventEditText"
        android:layout_marginBottom="-101dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/concert" />

    <TextView
        android:id="@+id/formText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Search Categories"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_margin="35dp"
        android:textColor="@color/colorTextIcons"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventEditText"
        android:layout_above="@+id/addEventButton"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:hint="Enter Category eg. Music"
        android:background="@color/colorTextIcons"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Categories"
        android:id="@+id/addEventButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:visibility="visible"
        android:layout_above="@+id/savedRestaurantsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Categories"
        android:id="@+id/savedRestaurantsButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>



</RelativeLayout>